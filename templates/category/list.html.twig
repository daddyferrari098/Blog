{# filepath: templates/category/list.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Toutes les catégories - Mon Blog{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Toutes les catégories</h1>

        {% if categories|length > 0 %}
            <div class="row">
                {% for category in categories %}
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{ category.name }}</h5>
                                {% if category.description %}
                                    <p class="card-text">{{ category.description }}</p>
                                {% endif %}
                                <p class="text-muted">
                                    {{ category.articles|length }} article{{ category.articles|length > 1 ? 's' : '' }}
                                </p>
                            </div>
                            <div class="card-footer">
                                <a href="{{ path('app_category_show', {slug: category.slug}) }}" class="btn btn-primary">
                                    Voir les articles
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info">
                <h4>Aucune catégorie</h4>
                <p>Il n'y a aucune catégorie pour le moment.</p>
            </div>
        {% endif %}

        <div class="mt-4">
            <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">
                ← Retour à l'accueil
            </a>
        </div>
    </div>
{% endblock %}