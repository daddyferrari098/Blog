{# filepath: templates/article/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifier {{ article.title }} - Mon Blog{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('app_article_list') }}">Articles</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('app_article_show', {slug: article.slug}) }}">{{ article.title }}</a></li>
                        <li class="breadcrumb-item active">Modifier</li>
                    </ol>
                </nav>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1>Modifier l'article</h1>
                    <a href="{{ path('app_article_show', {slug: article.slug}) }}" class="btn btn-outline-secondary">
                        ← Retour à l'article
                    </a>
                </div>

                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                    <div class="mb-3">
                        {{ form_label(form.title) }}
                        {{ form_widget(form.title) }}
                        {{ form_errors(form.title) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.category) }}
                        {{ form_widget(form.category) }}
                        {{ form_errors(form.category) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.content) }}
                        {{ form_widget(form.content) }}
                        {{ form_errors(form.content) }}
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="{{ path('app_article_show', {slug: article.slug}) }}" class="btn btn-secondary me-md-2">
                            Annuler
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Sauvegarder
                        </button>
                    </div>
                {{ form_end(form) }}

                <!-- Bouton de suppression -->
                <hr class="my-4">
                <div class="text-center">
                    <form method="post" action="{{ path('app_article_delete', {slug: article.slug}) }}" 
                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?')">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Supprimer l'article
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}