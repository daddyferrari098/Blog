{% extends 'base.html.twig' %}

{% block title %}Accueil - Mon Blog{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="hero-section text-center mb-5">
            <h1 class="display-4">Bienvenue sur mon Blog</h1>
            <p class="lead">Découvrez mes derniers articles</p>
        </div>

        <div class="row">
            <!-- Articles à gauche -->
            <div class="col-md-8">
                <h2 class="mb-4">Derniers articles</h2>
                
                {% if latest_articles %}
                    <div class="row">
                        {% for article in latest_articles %}
                            <div class="col-md-6 mb-4">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h5 class="card-title">{{ article.title }}</h5>
                                        <p class="card-text">{{ article.content|length > 150 ? article.content|slice(0, 150) ~ '...' : article.content }}</p>
                                        <small class="text-muted">{{ article.createdAt|date('d/m/Y') }}</small>
                                    </div>
                                    <div class="card-footer">
                                        <a href="{{ path('app_article_show', {slug: article.slug}) }}" class="btn btn-primary btn-sm">Lire la suite</a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-muted">Aucun article disponible pour le moment.</p>
                {% endif %}
            </div>

            <!-- Sidebar à droite -->
            <div class="col-md-4">
                <h3 class="mb-3">Catégories</h3>
                {% if categories %}
                    <div class="list-group">
                        {% for category in categories %}
                            <a href="{{ path('app_category_show', {slug: category.slug}) }}" class="list-group-item list-group-item-action">
                                {{ category.name }}
                                <span class="badge bg-primary rounded-pill">{{ category.articles|length }}</span>
                            </a>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-muted">Aucune catégorie disponible.</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
